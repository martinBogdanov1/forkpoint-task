<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <nav class="navbar" style="background-color: #e3f2fd;">
      <div class="ms-auto">
        <% categories.forEach(category=> { %>
          <a class="navbar-brand" href="/<%= category.id %>">
            <%= category.name %>
          </a>
          <% }); %>
      </div>
    </nav>
  </div>
  <div class="container">
    <div class="row">
      <% products.items.forEach(product => { %>
        <div class="col-6">
          <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
              <li class="list-group-item image-item text-center">
                <img class="img-fluid rounded mx-auto d-block" src="/images/<%= product.image %>" alt="<%= product.image %>">
              </li>
              <li class="list-group-item text-center desc">
                <h5 class="card-title">
                  <%= product.name %>
                </h5>
              </li>
              <li class="list-group-item">
                <div class="card-body">
                  <%- product.price_max 
                  ? '<span class="card-link"><strike>$' + product.price_max + '</strike> </span> <span class="card-link">$' + product.price + '</span>'
                  : '<span class="card-link">$' + product.price + '</span>' %>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <% }); %>
    </div>
  </div>

  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <% if (products.currentPage - 1 > 0) { %>
        <li class="page-item"><a class="page-link" href="?page=<%= products.currentPage - 1 %>">Previous</a></li>
      <% } %> 
      <% if (products.currentPage < products.totalPages) { %>
        <li class="page-item"><a class="page-link" href="?page=<%= products.currentPage + 1 %>">Next</a></li>
      <% } %>
    </ul>
  </nav>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>